rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read/write their own subscription data
    // Also allow service account for server-side operations
    match /subscriptions/{userId} {
      allow read, write: if 
        (request.auth != null && request.auth.uid == userId) ||
        (request.auth != null && request.auth.token.firebase.sign_in_provider == 'custom');
    }
    
    // Allow authenticated users to read/write client documents
    // More permissive rules to handle existing data without userId
    match /clients/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Allow anyone to read video documents for public viewing
    // Allow authenticated users and anonymous users to update approval status
    match /gcsClientCodes/{document} {
      allow read: if true; // Anyone can read videos for public viewing
      allow write: if request.auth != null; // Only authenticated users can create/modify videos
      
      // Allow approval status updates by anyone (including anonymous users)
      // This is more permissive to ensure approval workflow works
      allow update: if true;
    }
    
    // Allow authenticated users to read/write payment records
    match /payments/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read/write comments
    match /comments/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Allow both authenticated and anonymous users to read/write timestamped comments
    // Anonymous users can comment on public videos for better user experience
    match /timestampedComments/{document} {
      allow read: if true; // Anyone can read comments
      allow write: if true; // Anyone can write comments (with client-side validation)
    }
    
    // Service account rules for server-side operations
    // This rule should be more specific to avoid conflicts with anonymous access
    match /admin/{document=**} {
      allow read, write: if request.auth != null && 
        request.auth.token.firebase.sign_in_provider == 'custom';
    }
  }
}
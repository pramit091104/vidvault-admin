# Firebase Configuration
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef

# Google Cloud Storage Configuration
VITE_GCS_PROJECT_ID=your_gcs_project_id_here
VITE_GCS_BUCKET_NAME=your_gcs_bucket_name_here
VITE_GCS_API_KEY=your_gcs_api_key_here
VITE_GCS_CUSTOM_DOMAIN=your_custom_domain.com # Optional

# Razorpay Configuration (REQUIRED for payment functionality)
# Frontend key for Razorpay checkout initialization
VITE_RAZORPAY_KEY_ID=your_razorpay_key_id_here
# Backend keys for server-side API operations (REQUIRED)
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here

# Server Configuration (for backend)
GCS_PROJECT_ID=your_gcs_project_id_here
GCS_BUCKET_NAME=your_gcs_bucket_name_here
GCS_KEY_FILE=./path/to/service-account-key.json # Optional, use if using service account key file
PORT=3001
CORS_ORIGIN=http://localhost:5173

# Upload Configuration
UPLOAD_DIR=./uploads

# Upload Size Limits and Chunking (Updated for Vercel limits)
VITE_UPLOAD_SIMPLE_MAX_SIZE=4194304  # 4MB (Vercel serverless function limit)
VITE_UPLOAD_RESUMABLE_MAX_SIZE=2147483648  # 2GB
VITE_UPLOAD_CHUNK_SIZE=10485760  # 10MB

# Email Notification Configuration
GMAIL_USER=previu.online@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password_here

# Redis Configuration (Optional - for improved caching and rate limiting)
REDIS_URL=redis://localhost:6379
# If not provided, will fallback to in-memory caching

# Rate Limiting Configuration (Optional)
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window
RATE_LIMIT_UPLOAD_MAX=20     # Max uploads per hour
RATE_LIMIT_STRICT_MAX=10     # Max expensive operations per hour

# Cache Configuration (Optional)
CACHE_TTL_SUBSCRIPTION=300   # 5 minutes
CACHE_TTL_SIGNED_URL=300     # 5 minutes
CACHE_TTL_CLIENT_COUNT=180   # 3 minutes
CACHE_TTL_VIDEO_METADATA=600 # 10 minutes

# Session Configuration (Optional)
SESSION_TTL=86400            # 24 hours in seconds
SESSION_CLEANUP_INTERVAL=3600 # 1 hour in seconds

# Monitoring Configuration (Optional)
ENABLE_DETAILED_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# NOTE: Missing required environment variables will cause the application to fail with clear error messages.
# Ensure all RAZORPAY_* variables are set for payment functionality to work properly.
# For email notifications, set up Gmail App Password in your Google Account settings.
# Redis is optional but recommended for production - improves performance and enables distributed caching.

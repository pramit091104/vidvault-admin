{
    "name": "vidvault-monorepo",
    "private": true,
    "scripts": {
        "postinstall": "npm run install:all",
        "install:all": "cd client && npm install && cd ../video-server && npm install",
        "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\" --names \"SERVER,CLIENT\" --prefix-colors \"blue,green\"",
        "dev:client": "cd client && npm run dev",
        "dev:server": "cd video-server && npm run dev"
    },
    "devDependencies": {
        "concurrently": "^9.0.0"
    }
}
# Firebase Configuration
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef

# YouTube API Configuration
VITE_YOUTUBE_CLIENT_ID=your_youtube_client_id_here
VITE_YOUTUBE_API_KEY=your_youtube_api_key_here

# Google Cloud Storage Configuration
VITE_GCS_PROJECT_ID=your_gcs_project_id_here
VITE_GCS_BUCKET_NAME=your_gcs_bucket_name_here
VITE_GCS_API_KEY=your_gcs_api_key_here
VITE_GCS_CUSTOM_DOMAIN=your_custom_domain.com # Optional

# Razorpay Configuration (REQUIRED for payment functionality)
# Frontend key for Razorpay checkout initialization
VITE_RAZORPAY_KEY_ID=your_razorpay_key_id_here
# Backend keys for server-side API operations (REQUIRED)
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here

# Server Configuration (for backend)
GCS_PROJECT_ID=your_gcs_project_id_here
GCS_BUCKET_NAME=your_gcs_bucket_name_here
GCS_KEY_FILE=./path/to/service-account-key.json # Optional, use if using service account key file
PORT=3001
CORS_ORIGIN=http://localhost:5173

# Upload Configuration
UPLOAD_DIR=./uploads

# Upload Size Limits and Chunking
VITE_UPLOAD_SIMPLE_MAX_SIZE=104857600  # 100MB
VITE_UPLOAD_RESUMABLE_MAX_SIZE=2147483648  # 2GB
VITE_UPLOAD_CHUNK_SIZE=10485760  # 10MB

# NOTE: Missing required environment variables will cause the application to fail with clear error messages.
# Ensure all RAZORPAY_* variables are set for payment functionality to work properly.
